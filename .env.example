# Copiar a .env y rellenar con valores reales
# cp .env.example .env

# Django (backend, celery, celery-beat)
DEBUG=1
SECRET_KEY=cambiar-por-una-clave-secreta-segura
DJANGO_SETTINGS_MODULE=project.settings

# PostgreSQL (servicio postgres)
# La contraseña se fija al crear el volumen; si cambias POSTGRES_PASSWORD después,
# debe coincidir con la que usaste la primera vez o borrar el volumen (docker compose down -v).
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# URLs de conexión (backend, celery, celery-beat). Misma contraseña que POSTGRES_PASSWORD.
DATABASE_URL=postgres://postgres:postgres@postgres:5432/postgres
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# Memory management (backend)
PYTHONMALLOC=malloc
MALLOC_ARENA_MAX=2

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=cambiar-en-produccion
GF_USERS_ALLOW_SIGN_UP=false
